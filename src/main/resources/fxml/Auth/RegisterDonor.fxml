<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="700.0" prefWidth="600.0" styleClass="auth_container" stylesheets="@../../Styles/Auth.css"
            xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.groupwork.donation.Controllers.Auth.AuthenticationController">
    <FontIcon iconLiteral="fas-chevron-left" iconSize="24" layoutX="25.0" layoutY="45.0"
              fx:id="font_register_choice_button" />
    <ImageView fitHeight="76.0" fitWidth="96.0" layoutX="80.0" layoutY="65.0" nodeOrientation="INHERIT"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@../../Images/donation_app.png"/>
    </ImageView>
    <Label alignment="CENTER" layoutX="80.0" layoutY="139.0" text="Register Form">
        <font>
            <Font name="DejaVu Sans Bold" size="24.0"/>
        </font>
    </Label>
    <Label layoutX="80.0" layoutY="181.0" text="Fill the form for registration">
        <font>
            <Font name="DejaVu Sans Bold" size="14.0"/>
        </font>
    </Label>
    <VBox alignment="CENTER" layoutX="65.0" layoutY="222.0" prefHeight="416.0" prefWidth="478.0" spacing="20.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <TextField prefHeight="50.0" prefWidth="450.0" promptText="Username" fx:id="username_field"/>
        <PasswordField prefHeight="50.0" prefWidth="450.0" promptText="Password" fx:id="password_field"/>
        <TextField prefHeight="50.0" prefWidth="450.0" promptText="Email Address" fx:id="email_field"/>
        <TextField prefHeight="50.0" prefWidth="450.0" promptText="Phone Number" fx:id="phone_number_field"/>

        <TextField prefHeight="50.0" prefWidth="450.0" promptText="Location" fx:id="location_field"/>

        <Button mnemonicParsing="false" onAction="#registerDonor" prefHeight="43.0" prefWidth="450.0" text="Register">
            <font>
                <Font name="DejaVu Sans Bold" size="13.0"/>
            </font>
        </Button>
    </VBox>
</AnchorPane>
